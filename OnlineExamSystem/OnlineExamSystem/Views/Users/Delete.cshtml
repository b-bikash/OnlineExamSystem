@model OnlineExamSystem.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h2 class="mb-4 text-danger">Delete User</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">

        <p>
            Are you sure you want to delete this user?
        </p>

        <ul class="list-group mb-3">
            <li class="list-group-item"><strong>Username:</strong> @Model.Username</li>
            <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
            <li class="list-group-item"><strong>Role:</strong> @Model.Role</li>
        </ul>

        <form method="post" asp-action="DeleteConfirmed">
            <input type="hidden" name="id" value="@Model.Id" />

            <button type="submit" class="btn btn-danger">
                Yes, Delete
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                Cancel
            </a>
        </form>
    </div>
</div>
