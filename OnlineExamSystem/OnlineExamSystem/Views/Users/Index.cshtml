@model List<OnlineExamSystem.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<h2 class="mb-4">User Management</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success">
        + Create User
    </a>

    <form method="get" class="d-flex" style="max-width: 350px;">
        <input type="text"
               name="searchEmail"
               value="@ViewBag.SearchEmail"
               class="form-control me-2"
               placeholder="Search by email" />
        <button type="submit" class="btn btn-outline-secondary">
            Search
        </button>
    </form>
</div>

@if (Model.Any())
{
    <div class="card shadow-sm border-0">
        <div class="card-body">

            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th style="width:110px;">Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge bg-secondary">@user.Role</span>
                            </td>
                            <td>
                                <div class="d-flex gap-2 flex-wrap">
                                    <a asp-action="Edit"
                                       asp-route-id="@user.Id"
                                       class="btn btn-sm btn-warning">
                                        Edit
                                    </a>

                                    @if (user.IsActive)
                                    {
                                        <a asp-action="ToggleStatus"
                                           asp-route-id="@user.Id"
                                           class="btn btn-sm btn-secondary">
                                            Disable
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="ToggleStatus"
                                           asp-route-id="@user.Id"
                                           class="btn btn-sm btn-success">
                                            Enable
                                        </a>
                                    }

                                    <a asp-action="Delete"
                                       asp-route-id="@user.Id"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this user?');">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
}
else
{
    <div class="border rounded p-4 text-center text-muted mt-4">
        <h5>No users found</h5>
        <p class="mb-2">
            Try adjusting your email search or create a new user.
        </p>
        <a asp-action="Create" class="btn btn-success">
            + Create User
        </a>
    </div>
}
