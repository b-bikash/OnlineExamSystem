<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Exam System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />


    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: 600;
        }

        main {
            padding-top: 20px;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">

        <!-- BRAND : Image logo + title as ONE clickable unit -->
        <a class="navbar-brand brand-home d-flex align-items-center"
   asp-controller="@(Context.Session.GetInt32("UserId") != null ? "Dashboard" : "Home")"
   asp-action="Index">

    <!-- REAL SVG LOGO -->
    <svg class="brand-logo me-2"
         width="28"
         height="28"
         viewBox="0 0 24 24"
         fill="none"
         xmlns="http://www.w3.org/2000/svg">

        <path d="M3 10.5L12 3L21 10.5"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round" />

        <path d="M5 10.5V21H19V10.5"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round" />

        <path d="M10 21V14H14V21"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round" />
    </svg>

    <span class="brand-text">Online Exam</span>
</a>


        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">

            <!-- LEFT -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                @if (Context.Session.GetString("Role") != null)
                {
                    <li class="nav-item">
                        <a class="nav-link"
                           asp-controller="Dashboard"
                           asp-action="Index">
                            Dashboard
                        </a>
                    </li>

                    @if (Context.Session.GetString("Role") == "Student")
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Students"
                               asp-action="Profile">
                                My Profile
                            </a>
                        </li>
                    }
                }
            </ul>

            <!-- RIGHT -->
            <ul class="navbar-nav ms-auto align-items-center">
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    <li class="nav-item me-3">
                        <span class="text-light small">
                            Welcome, <strong>@Context.Session.GetString("Username")</strong>
                        </span>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Account"
                           asp-action="Logout"
                           class="btn btn-outline-light btn-sm px-3">
                            Logout
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <div class="d-flex align-items-center gap-2">
                            <a asp-controller="Account"
                               asp-action="Login"
                               class="btn btn-outline-light btn-sm px-3">
                                Login
                            </a>

                            <a asp-controller="Account"
                               asp-action="Register"
                               class="btn btn-primary btn-sm px-3">
                                Register
                            </a>
                        </div>
                    </li>
                }
            </ul>

        </div>
    </div>
</nav>





    <!-- ================= BREADCRUMB BAR ================= -->
    @*@if (ViewBag.Breadcrumbs != null)
    {
        <nav aria-label="breadcrumb" class="bg-light border-bottom">
            <ol class="breadcrumb container py-2 mb-0">
                @foreach (var crumb in ViewBag.Breadcrumbs)
                {
                    if (crumb.IsActive)
                    {
                        <li class="breadcrumb-item active" aria-current="page">
                            @crumb.Text
                        </li>
                    }
                    else
                    {
                        <li class="breadcrumb-item">
                            <a href="@crumb.Url">@crumb.Text</a>
                        </li>
                    }
                }
            </ol>
        </nav>
    }*@
    

    <!-- ================= GLOBAL MESSAGES ================= -->
    <div class="container mt-3">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    </div>

    <!-- MAIN CONTENT -->
    <main class="container">
        @RenderBody()
        <footer class="mt-5">
            <div class="text-center text-muted py-3" style="font-size: 0.9rem;">
                © 2026 <strong>B&amp;B ExamVerse</strong>. All rights reserved.
            </div>
        </footer>

    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
