<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Exam System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: 600;
        }

        main {
            padding-top: 20px;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

            @if (Context.Session.GetInt32("UserId") != null)
            {
                <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">
                    Online Exam
                </a>
            }
            else
            {
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    Online Exam
                </a>
            }

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    @if (Context.Session.GetString("Role") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                Dashboard
                            </a>
                        </li>

                        @* ADMIN 
                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Index">
                                    Users
                                </a>
                            </li>
                        }*@

                        @* TEACHER *@
                        @if (Context.Session.GetString("Role") == "Teacher")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Exams" asp-action="Index">
                                    Exams
                                </a>
                            </li>
                        }

                        @* STUDENT *@
                        @if (Context.Session.GetString("Role") == "Student")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Exams" asp-action="Available">
                                    Available Exams
                                </a>
                            </li>

                            <!-- 🔹 NEW: Student Profile Link -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Students" asp-action="Profile">
                                    My Profile
                                </a>
                            </li>
                        }
                    }
                </ul>

                <ul class="navbar-nav ms-auto align-items-center">
                    @if (Context.Session.GetString("UserId") != null)
                    {
                        <li class="nav-item me-3">
                            <span class="nav-link text-light p-0">
                                @Context.Session.GetString("Username")
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger p-0" asp-controller="Account" asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }

                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
