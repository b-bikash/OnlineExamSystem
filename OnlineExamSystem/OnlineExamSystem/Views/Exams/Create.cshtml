@model OnlineExamSystem.Models.Exam

<h2>Create Exam</h2>

<form action="/Exams/Create" method="post">

    <div class="mb-3">
        <label>Title</label>
        <input class="form-control" name="Title" />
    </div>

    <div class="mb-3">
        <label>Description</label>
        <textarea class="form-control" name="Description"></textarea>
    </div>

    <div class="mb-3">
        <label>Duration In Minutes</label>
        <input class="form-control" name="DurationInMinutes" />
    </div>

    <div class="mb-3">
        <label>Total Marks</label>
        <input class="form-control" name="TotalMarks" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="/Exams" class="btn btn-secondary">Cancel</a>

</form>
