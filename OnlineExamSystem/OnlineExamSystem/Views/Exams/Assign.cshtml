@model OnlineExamSystem.Models.Exam

@{
    ViewData["Title"] = "Schedule Exam";

    bool isEditMode =
        !Model.StartDateTime.HasValue ||
        Context.Request.Query.ContainsKey("edit");
}

<h2>Schedule Exam</h2>
<hr />

<form asp-action="Assign" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />

    <!-- Exam title (read-only) -->
    <div class="mb-3">
        <label class="form-label">Exam</label>
        <input type="text"
               class="form-control"
               value="@Model.Title"
               disabled />
    </div>

    <!-- Subject (read-only, context info) -->
    <div class="mb-3">
        <label class="form-label">Subject</label>
        <input type="text"
               class="form-control"
               value="@Model.Subject?.Name"
               disabled />
    </div>

    @{
        var minTime = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
    }

    <!-- Start time -->
    <div class="mb-3">
        <label class="form-label">Start Date & Time</label>
        <input type="datetime-local"
               id="startDateTime"
               name="startDateTime"
               class="form-control"
               value="@(Model.StartDateTime.HasValue
                    ? Model.StartDateTime.Value.ToString("yyyy-MM-ddTHH:mm")
                    : "")"
               min="@minTime"
               @(isEditMode ? "" : "readonly")
               required />
    </div>

    <!-- End time -->
    <div class="mb-3">
        <label class="form-label">End Date & Time</label>
        <input type="datetime-local"
               id="endDateTime"
               name="endDateTime"
               class="form-control"
               value="@(Model.EndDateTime.HasValue
                    ? Model.EndDateTime.Value.ToString("yyyy-MM-ddTHH:mm")
                    : "")"
               min="@minTime"
               @(isEditMode ? "" : "readonly")
               required />
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var startInput = document.getElementById('startDateTime');
            var endInput = document.getElementById('endDateTime');

            if (startInput && endInput) {
                // Ensure min time is set for fresh page loads
                var now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                var currentDateTime = now.toISOString().slice(0, 16);
                
                if (!startInput.value) {
                    startInput.min = currentDateTime;
                }

                // Update End Time min value when Start Time changes
                startInput.addEventListener('change', function () {
                    if (this.value) {
                        endInput.min = this.value;
                    }
                });
            }
        });
    </script>

    <!-- Validation -->
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>

    <!-- Actions -->
    @if (isEditMode)
    {
        <button type="submit" class="btn btn-primary">
            @(Model.StartDateTime.HasValue ? "Update Schedule" : "Schedule Exam")
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Cancel
        </a>
    }
    else
    {
        <a asp-action="Assign"
           asp-route-id="@Model.Id"
           asp-route-edit="true"
           class="btn btn-warning">
            Edit Schedule
        </a>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Back
        </a>
    }
</form>