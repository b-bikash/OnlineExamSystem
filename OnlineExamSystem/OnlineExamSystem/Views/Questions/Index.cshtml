@model IEnumerable<OnlineExamSystem.Models.Question>

@{
    ViewData["Title"] = "Questions";
    var examTitle = Model.FirstOrDefault()?.Exam?.Title;
    var serialNo = 1;
}

<h2>Questions</h2>

@if (!string.IsNullOrEmpty(examTitle))
{
    <h5 class="text-muted mb-3">
        Exam: <strong>@examTitle</strong>
    </h5>
}

<a asp-action="Create"
   asp-route-examId="@ViewBag.ExamId"
   class="btn btn-primary mb-3">
    Add Question
</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width: 80px;">S.No</th>
            <th>Question</th>
            <th style="width: 100px;">Marks</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@serialNo</td>
                <td>@q.Text</td>
                <td>@q.Marks</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@q.Id"
                       class="btn btn-sm btn-warning">
                        Edit
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@q.Id"
                       class="btn btn-sm btn-danger ms-1">
                        Delete
                    </a>
                </td>
            </tr>

            serialNo++;
        }
    </tbody>
</table>
