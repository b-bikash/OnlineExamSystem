@model IEnumerable<OnlineExamSystem.Models.Question>

@{
    ViewData["Title"] = "Questions";
    var examTitle = Model.FirstOrDefault()?.Exam?.Title;
    var serialNo = 1;
}

<!-- ================= BREADCRUMB ================= -->
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Exams" asp-action="Index">Exams</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            Questions
        </li>
    </ol>
</nav>

<!-- ================= PAGE HEADER ================= -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">Questions</h2>

        @if (!string.IsNullOrEmpty(examTitle))
        {
            <small class="text-muted">
                Exam: <strong>@examTitle</strong>
            </small>
        }
    </div>

    <div>
        <a asp-controller="Exams"
           asp-action="Index"
           class="btn btn-outline-secondary me-2">
            ← Back to Exams
        </a>

        <a asp-action="Create"
           asp-route-examId="@ViewBag.ExamId"
           class="btn btn-primary">
            Add Question
        </a>
    </div>
</div>

<!-- ================= QUESTIONS TABLE ================= -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width: 80px;">S.No</th>
            <th>Question</th>
            <th style="width: 100px;">Marks</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@serialNo</td>
                <td>@q.Text</td>
                <td>@q.Marks</td>
                <td>
                    <a asp-action="Edit"
                       asp-route-id="@q.Id"
                       class="btn btn-sm btn-warning">
                        Edit
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@q.Id"
                       class="btn btn-sm btn-danger ms-1">
                        Delete
                    </a>
                </td>
            </tr>

            serialNo++;
        }
    </tbody>
</table>
