@model List<OnlineExamSystem.Models.Course>

@{
    ViewData["Title"] = "Course Management";
}

<h2 class="mb-4">Course Management</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="get" class="d-flex mb-3" style="max-width: 400px;">
    <input type="text"
           name="search"
           value="@ViewBag.Search"
           class="form-control me-2"
           placeholder="Search by course name" />
    <button type="submit" class="btn btn-outline-secondary">
        Search
    </button>
</form>

<a asp-action="Create" class="btn btn-success mb-3">
    + Add Course
</a>

@if (Model.Any())
{
    <table class="table table-bordered table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Name</td>
                    <td>
                        <div class="d-flex gap-2 flex-wrap">

                            <!-- ✅ NEW: Manage Subjects -->
                            <a asp-action="Subjects"
                               asp-route-id="@course.Id"
                               class="btn btn-sm btn-info">
                                Subjects
                            </a>

                            <a asp-action="Edit"
                               asp-route-id="@course.Id"
                               class="btn btn-sm btn-warning">
                                Edit
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@course.Id"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this course?');">
                                Delete
                            </a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="border rounded p-4 text-center text-muted mt-4">
        <h5>No courses found</h5>
        <p class="mb-0">
            Try searching by course name or add a new course.
        </p>
    </div>
}
