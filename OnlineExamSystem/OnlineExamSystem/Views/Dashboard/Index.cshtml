@{
    ViewData["Title"] = "Dashboard";

    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role");
}

<div class="mt-4">
    <h2 class="mb-3">Dashboard</h2>

    <p class="text-muted">
        Welcome, <strong>@username</strong>
    </p>

    <div class="row mt-4">

        @* ADMIN *@
        @if (role == "Admin")
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">User Management</h5>
                        <p class="card-text text-muted">
                            Create, edit and manage users.
                        </p>
                        <a asp-controller="Users" asp-action="Index"
                           class="btn btn-primary btn-sm">
                            Manage Users
                        </a>
                    </div>
                </div>
            </div>
        }

        @if (role == "Admin")
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Student Management</h5>
                        <p class="card-text text-muted">
                            View and correct student details.
                        </p>
                        <a asp-controller="AdminStudents" asp-action="Index"
                           class="btn btn-secondary btn-sm">
                            View Students
                        </a>
                    </div>
                </div>
            </div>
        }

        @if (role == "Admin")
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Course Management</h5>
                        <p class="card-text text-muted">
                            View and manage courses.
                        </p>
                        <a asp-controller="AdminCourses" asp-action="Index"
                           class="btn btn-info btn-sm">
                            Manage Courses
                        </a>
                    </div>
                </div>
            </div>
        }

        @if (role == "Admin")
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">College Management</h5>
                        <p class="card-text text-muted">
                            View and manage colleges.
                        </p>
                        <a asp-controller="AdminColleges" asp-action="Index"
                           class="btn btn-dark btn-sm">
                            Manage Colleges
                        </a>
                    </div>
                </div>
            </div>
        }


        @* TEACHER *@
        @if (role == "Teacher")
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Exam Management</h5>
                        <p class="card-text text-muted">
                            Create exams and add questions.
                        </p>
                        <a asp-controller="Exams" asp-action="Index"
                           class="btn btn-success btn-sm">
                            View Exams
                        </a>
                    </div>
                </div>
            </div>
        }

        @* STUDENT *@
        @if (role == "Student")
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Available Exams</h5>
                        <p class="card-text text-muted">
                            Attempt available exams.
                        </p>
                        <a asp-controller="Exams" asp-action="Available"
                           class="btn btn-warning btn-sm">
                            Start Exam
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
