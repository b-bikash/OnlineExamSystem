@model OnlineExamSystem.Models.Subject

<h3>Edit Subject</h3>

<form method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Subject Name</label>
        <input asp-for="Name"
               class="form-control"
               placeholder="e.g. AI & ML, C++, Data-Science" />
        <span asp-validation-for="Name"
              class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Save Changes
    </button>

    <a asp-action="Index"
       class="btn btn-secondary ms-2">
        Cancel
    </a>
</form>
