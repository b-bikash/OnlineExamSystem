@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">

    <!-- HEADER -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8 text-center">

            <section class="text-center py-5">
                <h1 class="fw-bold">B&B ExamVerse</h1>

                <p class="text-muted mt-2">
                    Secure & user-friendly online examination platform
                </p>

                <div class="mt-4">
                    <a class="btn btn-primary me-2" href="/Account/Login">Login</a>
                    <a class="btn btn-outline-primary" href="/Account/Register">Register</a>
                </div>
            </section>

        </div>
    </div>


    <!-- FEATURE CARDS -->
    <div class="row g-4 mt-2">

        <!-- STUDENT -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm feature-card">
                <div class="card-body p-4 text-center">
                    <h5 class="fw-semibold mb-3">For Students</h5>
                    <p class="text-muted mb-0">
                        Register, complete your profile, view assigned exams,
                        attempt exams within the given time window,
                        and view results once the exam is completed.
                    </p>
                </div>
            </div>
        </div>

        <!-- TEACHER -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm feature-card">
                <div class="card-body p-4 text-center">
                    <h5 class="fw-semibold mb-3">For Teachers</h5>
                    <p class="text-muted mb-0">
                        Create exams, add and manage questions,
                        assign exams to students, monitor exam progress,
                        and review student performance through results.
                    </p>
                </div>
            </div>
        </div>

        <!-- ADMIN -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm feature-card">
                <div class="card-body p-4 text-center">
                    <h5 class="fw-semibold mb-3">For Administrators</h5>
                    <p class="text-muted mb-0">
                        Manage users, colleges, and courses,
                        oversee the entire system, ensure data integrity,
                        and maintain smooth operation of the platform.
                    </p>
                </div>
            </div>
        </div>

    </div>

</div>

<!-- SUBTLE UI POLISH -->
<style>
    .feature-card {
        transition: all 0.25s ease;
    }

        .feature-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.08);
        }

        /* Slightly tighter card text */
        .feature-card p {
            line-height: 1.45;
        }
</style>

