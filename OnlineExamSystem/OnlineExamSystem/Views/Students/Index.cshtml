@model List<OnlineExamSystem.Models.Student>

<h2>Students</h2>

@if (Model.Count == 0)
{
    <p>No students found.</p>
}
else
{
    <table border="1" cellpadding="5">
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>

        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
            </tr>
        }
    </table>
}
